#!/bin/bash

if [ `whoami` == root ]; then
	echo Please DONT run this script as root, or using sudo
	exit
fi

echo ""
echo "****************************************"
echo "* Setting up monet-dev environment *"
echo "****************************************"
echo ""

#mongodb snapshot sources
#sudo apt-add-repository 'deb http://downloads.mongodb.org/distros/ubuntu 10.10 10gen'
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv 7F0CEB10
sudo apt-get -y update
sudo apt-get -y upgrade

# system and python dependencies
sudo apt-get -y install git \
                        curl \
                        nginx \
                        mongodb \
                        openssl \
                        uuid-dev \
                        python2.7 \
                        libssl-dev \
                        libgif-dev \
                        libjpeg-dev \
                        libevent-dev \
                        libpython2.7 \
                        python2.7-dev \
                        build-essential \
                        rabbitmq-server \
                        libfreetype6-dev \

# set up rabbitmq
sudo rabbitmqctl add_user monet monet
sudo rabbitmqctl add_vhost monetvhost 
sudo rabbitmqctl set_permissions -p monetvhost monet ".*" ".*" ".*"

# set up zeromq
curl http://download.zeromq.org/zeromq-2.1.3.tar.gz | tar xz && cd zeromq-*
./configure
make
sudo make install
cd ..
rm zeromq*.tar.gz
sudo cp -R /usr/local/lib/* /usr/lib # zeromq libraries

# set up node
git clone https://github.com/joyent/node.git && cd node
./configure
make
sudo make install
cd ..

# install node packages
curl http://npmjs.org/install.sh | sudo sh
rm install.sh
sudo npm install zeromq
sudo npm install socket.io

# dev env
wget -c http://pypi.python.org/packages/2.7/s/setuptools/setuptools-0.6c11-py2.7.egg#md5=fe1f997bc722265116870bc7919059ea
sudo sh setuptools-0.6c11-py2.7.egg

sudo python2.7 /usr/local/bin/easy_install-2.7 pip
sudo python2.7 /usr/local/bin/pip-2.7 install virtualenv
virtualenv -p python2.7 --no-site-packages --distribute --clear env
. env/bin/activate

# python dependencies
pip install Flask \
                PIL \
                pyzmq \
                celery \
                fabric \
                sphinx \
                ipython \
                pymongo \
                eventlet \
                pyflakes \
                py-bcrypt \
                flask-uploads \

ln -s $(pwd) env/lib/python2.7/site-packages/monet


git clone git://fabfile.org/fabric.git fabric
cd fabric
python setup.py build
sudo python setup.py install

echo ""
echo "***********************"
echo "* monet-dev::Done! *"
echo "***********************"
echo ""
