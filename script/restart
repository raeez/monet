#!/bin/bash

if [ `whoami` != root ]; then
	echo Please run this script as root, or using sudo
	exit
fi

initctl reload-configuration

echo "*** memoize *** restarting mongodb..."
restart mongodb.memoize
echo "*** memoize *** restarting rabbitmq..."
restart rabbitmq.memoize
echo "*** memoize *** restarting celery..."
restart celery.memoize
echo "*** memoize *** restarting client..."
restart client.memoize
echo "*** memoize *** restarting nginx..."
restart nginx.memoize
